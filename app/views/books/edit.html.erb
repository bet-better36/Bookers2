<div class="col-md-6 col-md-offset-3">

<h1>Editing Book</h1>
<div class="error_explanation">
  <% if @book.errors.any? %>
	<h2><%= pluralize(@book.errors.count, "error") %>
          prohibited this book from being saved:
    </h2><br>
    <ul>
	<% @book.errors.full_messages.each do |message| %>
	  <li><%= message %></li>
	<% end %>
    </ul>
  <% end %>
</div>

<%= form_for @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title,class: "book_title col-xs-12" %>
    <h4>Body</h4>
    <%= f.text_area :body,class: "book_title col-xs-12" %><br>
    	<%= f.submit 'Update Book', class: "col-xs-12 btn btn-primary" %>
<% end %>

    <%= link_to "Show", book_path(@book.id) %>
    |
    <%= link_to "Back", books_path %>
</div>
