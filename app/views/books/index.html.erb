<div class="error_explanation">
  <% if @book.errors.any? %>
    <h2><%= pluralize(@book.errors.count, "error") %>
          prohibited this obj from being saved:
    </h2><br>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
   <% end %>
</div>

    <div class="col-xs-3">
<%= render "render/uif" , user: current_user, book: @book %>
    </div>

<div class="col-xs-9">
<h2>AllUsersBooks</h2>

<table class="table table-hovor table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>favo</th>
      <th>comment</th>
    </tr>
  </thead>

  	<% @books.each do |book| %>
    <tbody>
      <tr>
       <td>
        <%= link_to user_path(book.user_id) do %>
        <%= attachment_image_tag book.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %>
        <% end %>
        </td>
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.body %></td>
       <td id="favo-<%= book.id %>">
           <%= render 'favorites/favo', book: book %>
       </td>
       <td>コメント数：<%= book.book_comments.count %></td>
      </tr>
  </tbody>
  <% end %>
</table>


    </div>

  